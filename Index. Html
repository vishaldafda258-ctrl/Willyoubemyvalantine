    <script>
        // Logic for Page 1
        function clickNo() {
            const emoji = document.getElementById('sad-emoji');
            emoji.style.display = 'block';
        }

        function goToPage2() {
            document.getElementById('page1').style.display = 'none';
            document.getElementById('page2').style.display = 'block';
        }

        // Logic for Page 2
        function openBox(boxNumber) {
            const box = document.getElementById('box' + boxNumber);
            
            // Only open if it hasn't been opened yet (checks if it shows the box emoji)
            if (box.innerHTML.includes('üì¶')) {
                box.classList.add('revealed');
                
                if (boxNumber === 1) {
                    // Chocolate
                    box.innerHTML = 'üç´'; 
                } else if (boxNumber === 2) {
                    // Rose and Chocolate
                    box.innerHTML = 'üåπüç´';
                } else if (boxNumber === 3) {
                    // Ring
                    box.innerHTML = 'üòç‚ú®‚ù§<br>üíç';
                }
            }
        }
    </script>
