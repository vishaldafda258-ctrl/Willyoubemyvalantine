    <div class="container">
        
        <div id="page1">
            <h1>Will you be my Valentine?</h1>
            <div class="btn-group">
                <button class="btn-no" onclick="clickNo()">No</button>
                <button class="btn-yes" onclick="goToPage2()">Yes</button>
            </div>
            <div id="sad-emoji">üò≠</div>
        </div>

        <div id="page2">
            <h1>I have a surprise for you my queen</h1>
            <p>Click the boxes!</p>
            <div class="box-container">
                <div class="gift-box" id="box1" onclick="openBox(1)">
                    üì¶
                </div>
                <div class="gift-box" id="box2" onclick="openBox(2)">
                    üì¶
                </div>
                <div class="gift-box" id="box3" onclick="openBox(3)">
                    üì¶
                </div>
            </div>
